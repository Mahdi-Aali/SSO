<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/bootstrap.min.css" />
    <link rel="stylesheet" href="css/style.css" />
    @if (IsSectionDefined("Css"))
    {
        await RenderSectionAsync("Css", false);
    }
    <title>@ViewBag.Title - SSO</title>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Mahdi Aali SSO</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Setting</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Applications</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Logout</a>
                        </li>
                    </ul>
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <main class="container-fluid">
        @RenderBody()
    </main>


    <footer class="bg-light-subtle bg-gradient p-4 mt-5">
        <h3 class="text-center">
            Mahdi Aali SSO</h2>
            <section class="row mt-3">
                <div class="col-lg-4 col-md-12 col-sm-12">
                    <form action="#" method="post">
                        <p class="lead ps-3">Subscribe news about Mahdi Aali SSO</p>
                        <div class="p-3 mb-3">
                            <div class="row">
                                <div class="col-lg-9 col-md-9 col-sm-12 p-2">
                                    <input type="email" class="form-control" placeholder="example@example.com" />
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-12 p-2">
                                    <button type="submit" class="btn btn-outline-primary">Subscribe</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="col-lg-8 col-md-12 col-sm-12">
                    <p>Quick references</p>
                    <div class="row">
                        <div class="col-lg-4 col-md-6 col-sm-12">
                            <nav class="footer-nav">
                                <ul>
                                    <li><a href="#" class="text-decoration-none text-primary p-3">Home</a></li>
                                    <li><a href="#" class="text-decoration-none text-primary p-3">Profile</a></li>
                                    <li><a href="#" class="text-decoration-none text-primary p-3">Settings</a></li>
                                    <li><a href="#" class="text-decoration-none text-primary p-3">Applications</a></li>
                                    <li><a href="#" class="text-decoration-none text-primary p-3">Logout</a></li>
                                </ul>
                            </nav>
                        </div>
                        <div class="col-lg-4 col-md-6 col-sm-12">
                            <nav class="footer-nav">
                                <ul>
                                    <li>
                                        <a href="#" class="text-decoration-none text-primary p-3">Edit your profile</a>
                                    </li>
                                    <li>
                                        <a href="#" class="text-decoration-none text-primary p-3">Security settings</a>
                                    </li>
                                    <li><a href="#" class="text-decoration-none text-primary p-3">Applications</a></li>
                                    <li><a href="#" class="text-decoration-none text-primary p-3">Inbox</a></li>
                                </ul>
                            </nav>
                        </div>
                        <div class="col-lg-4 col-md-6 col-sm-12">
                            <nav class="footer-nav">
                                <ul>
                                    <li><a href="#" class="text-decoration-none text-primary p-3">Contact us</a></li>
                                    <li><a href="#" class="text-decoration-none text-primary p-3">About us</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </section>
    </footer>

    <script src="js/bootstrap.bundle.min.js"></script>
    @if (IsSectionDefined("Script"))
    {
        await RenderSectionAsync("Scritp", false);
    }
</body>

</html>