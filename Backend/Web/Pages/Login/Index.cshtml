@page
@model Web.Pages.Login.IndexModel
@{
    ViewBag.Title = "Login";
    Layout = "_AuthenticationLayout";
}


<section class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-12">
        <h2 class="text-center">Mahdi Aali SSO</h2>
        <div class="custom-card">
            <div class="text-center">
                <img src="img/login.png" alt="login image" title="login to your account" class="form-banner" />
                <p class="lead">Login to your account.</p>
            </div>
            <section class="m-3">
                <form action="#" method="post">
                    <div class="mb-3 p-2">
                        <label class="form-label">Username </label>
                        <input class="form-control" type="text" placeholder="Username" />
                    </div>
                    <div class="mb-3 p-2">
                        <label class="form-label">Password </label>
                        <input class="form-control" type="password" placeholder="********" />
                    </div>
                    <div class="mb-3 p-2">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox">
                            <label class="form-check-label" for="flexCheckDefault">
                                Remember me!
                            </label>
                        </div>
                    </div>
                    <p class="ps-2">Forgot your password? <a class="btn btn-link" href="#">Reset password</a></p>
                    <p class="ps-2">Don't have an account? <a class="btn btn-link" asp-page="/Register/Index">Register</a></p>
                    <div class="mb-3 p-2">
                        <button type="submit" class="btn btn-primary ps-5 pe-5">Login</button>
                        <button type="reset" class="btn btn-outline-secondary">Reset</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</section>